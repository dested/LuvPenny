{
  "compilerOptions": {
    "removeComments": false,
    "noEmit": true,
    "noEmitOnError": false,
    "experimentalDecorators": true,
    "allowUnreachableCode": true,
    "strict": true,
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "strictNullChecks": false,
    "jsx": "react-native",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "allowJs": true
  },
  "types": [
    "react",
    "react-native",
    "jest"
  ],
  "exclude": [
    "android",
    "ios",
    "node_modules"
  ]
}